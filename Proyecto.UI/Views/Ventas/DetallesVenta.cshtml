@model IEnumerable<Proyecto.Model.VentaDetalles>


    <h1>Detalles de la venta</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inventarios.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
             item.SubTotal = item.Precio * item.Cantidad;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Inventarios.Nombre)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoDescuento)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Monto)
                </td>
            <td>
                    @Html.ActionLink("Eliminar", "ElimineItemDelInventario", new {  id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>